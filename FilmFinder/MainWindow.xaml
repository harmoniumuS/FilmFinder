<Window x:Class="FilmFinder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Film Finder" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="{Binding SelectedMovie.NameRu}" FontSize="24" />
            <TextBlock Text="{Binding SelectedMovie.RatingKinopoisk}" />
            <TextBlock Text="{Binding SelectedMovie.Description}" TextWrapping="Wrap" />
            <Image Source="{Binding SelectedMovie.PosterUrl}" Width="200" />
        </StackPanel>
    </Grid>
</Window>
